@using SilentNotes.ViewModels
@model OpenSafeViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <base href="@Model.HtmlBase">
    <title>SilentNotes</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">

    <link href="bootstrap.min.css" rel="stylesheet" />
    <link href="silentnotes.css" rel="stylesheet" />

    <script src="jquery-3.4.1.min.js"></script>
    <script src="bootstrap.bundle.min.js"></script>
    <script src="silentnotes.js"></script>

    <style type="text/css">
        #content {
            background-image: url("opensafe-background.svg");
            background-repeat: no-repeat;
            background-position: right -110px top -210px;
            background-size: 480px;
        }
    </style>
    <script>
        $(function () {
            addShortcuts();
        });
    </script>
</head>
<body>
    <nav id="navigation" class="d-flex">
        <button class="nav-item mr-auto shortcut-escape" onclick="bind(event);" data-binding="GoBack" title="@Model.Language["back"]">@{WriteLiteral(Model.Icon["arrow-left"]);}</button>
    </nav>

    <div id="content" class="container-fluid p-4">
        @if (Model.SafeExists)
        {
            <h2>@Model.Language["safe_open"]</h2>
            <div class="my-4">@Model.Language["safe_open_existing"]</div>
        }
        else
        {
            <h2>@Model.Language["safe_new"]</h2>
            <div class="my-4">@Model.Language["safe_open_new"]</div>
        }

    <form class="mb-4 col-md-9">
        <div class="form-row form-group">
            <label class="col-form-label col-md-3" for="Password">@Model.Language["cloud_password"]</label>
            <div class="col-md-9">
                <input type="password" class="form-control" oninput="bind(event)" data-binding="Password" id="Password" value="" autofocus>
                <div class="invalid-feedback">@Model.Language["password_short_error"]</div>
            </div>
        </div>
        <div class="form-row form-group mb-4" @if (Model.SafeExists) { @("hidden") ; }>
            <label class="col-form-label col-md-3" for="PasswordConfirmation">@Model.Language["safe_confirm_password"]</label>
            <div class="col-md-9">
                <input type="password" class="form-control" oninput="bind(event)" data-binding="PasswordConfirmation" id="PasswordConfirmation" value="">
                <div class="invalid-feedback">@Model.Language["password_confirmation_error"]</div>
            </div>
        </div>

        <button type="button" class="btn btn-primary mb-2 shortcut-enter" onclick="bind(event)" data-binding="OkCommand">@Model.Language["ok"]</button>
        <button type="button" class="btn btn-secondary mb-2" onclick="bind(event)" data-binding="CancelCommand">@Model.Language["cancel"]</button>
        @if (Model.SafeExists)
        {
        <button type="button" class="btn btn-danger mb-2 ml-4" onclick="bind(event)" data-binding="ResetSafeCommand">@Model.Language["safe_reset"]</button>
        }
    </form>

        @if (!Model.SafeExists)
        {
            <div class="alert alert-success my-4">@Model.Language["safe_password_requirement"]</div>
        }
    </div>
</body>
</html>
