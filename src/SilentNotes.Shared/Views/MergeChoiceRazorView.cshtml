@using SilentNotes.ViewModels
@model MergeChoiceViewModel
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <base href="@Model.HtmlBase">
    <title>SilentNotes</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">

    <link href="bootstrap.min.css" rel="stylesheet" />
    <link href="silentnotes.css" rel="stylesheet" />
    <link href="@(Model.Theme.DarkMode ? "silentnotes.dark.css" : "silentnotes.light.css")" rel="stylesheet" />

    <script src="vue.min.js"></script>
    <script src="jquery-3.5.1.slim.min.js"></script>
    <script src="bootstrap.bundle.min.js"></script>
    <script src="silentnotes.js"></script>

    <style type="text/css">
        .list-group {
            max-width: 360px;
        }

        .list-group-item {
            cursor: pointer;
        }
    </style>
    <script>
        @{WriteLiteral(Model.VueDataBindingScript);}
    </script>
</head>
<body><div id="vueDataBinding">
    <nav id="navigation" class="d-flex">
        <button class="nav-item mr-auto" v-on:click="GoBackCommand" title="@Model.Language["back"]">@{WriteLiteral(Model.Icon["arrow-left"]);}</button>
    </nav>

    <div id="content" class="container-fluid p-4">
        <h1>@Model.Language["cloud_service_choice"]</h1>

        <div class="list-group">
            <button type="button" v-on:click="UseMergedRepositoryCommand" class="list-group-item list-group-item-action d-flex">
                <span class="dialog-action-arrow align-items-center mr-3">➜</span><span class="btn-text">@Model.Language["sync_repository_merge"]</span>
            </button>
            <button type="button" v-on:click="UseCloudRepositoryCommand" class="list-group-item list-group-item-action d-flex">
                <span class="dialog-action-arrow align-items-center mr-3">➜</span><span class="btn-text">@Model.Language["sync_repository_cloud"]</span>
            </button>
            <button type="button" v-on:click="UseLocalRepositoryCommand" class="list-group-item list-group-item-action d-flex">
                <span class="dialog-action-arrow align-items-center mr-3">➜</span><span class="btn-text">@Model.Language["sync_repository_device"]</span>
            </button>
        </div>
    </div>
</div></body>
</html>
